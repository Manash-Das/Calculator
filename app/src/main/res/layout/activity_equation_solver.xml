<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_color"
    tools:context=".EquationSolver">
    <TableLayout
        android:id="@+id/TableLayout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1">
            <Spinner
                android:id="@+id/spinnerEquationSolver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/arrow_up"
                    android:layout_width="match_parent"
                    android:contentDescription="@string/up_arrow_des"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_arrow_drop_up_24"
                    android:scaleType = "centerCrop"
                    android:background="@color/body_color"
                    android:clickable="false"/>

                <ImageButton
                    android:id="@+id/arrow_down"
                    android:layout_width="match_parent"
                    android:contentDescription="@string/down_arrow_des"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/arrow_down"
                    android:scaleType="centerCrop"
                    android:background="@color/body_color"
                    android:clickable="false"/>
            </LinearLayout>

            <EditText
                android:id="@+id/answerBoxEquationSolver"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:hint="@string/input_text_display"
                android:inputType="text|textMultiLine"
                android:background="@color/body_color"
                android:textSize="60sp"
                android:scrollbars="vertical"
                android:autofillHints="false"
                android:gravity="bottom|end" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_marginBottom="30dp"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/inputTextEquationSolver"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:autofillHints="true"
                android:layout_weight="5"
                android:gravity="center_vertical|end"
                android:textSize="40sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_height="0dp">
            <Button
                android:id="@+id/clearEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/circle"
                android:backgroundTint="@color/red"
                android:text="@string/clear"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/openBracketEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/open_bracket"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/closeBracketEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/close_bracket"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <ImageButton
                android:id="@+id/backspaceEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:backgroundTint="@color/green"
                android:contentDescription="@string/backspace"
                android:scaleType="fitCenter"
                android:src="@drawable/backspace"
                app:layout_constraintRight_toRightOf="parent" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/oneEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/one"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/twoEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/two"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/threeEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/three"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/plusEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/plus"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/fourEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/four"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/fiveEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/five"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/sixEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/six"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/minusEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/minus"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/sevenEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/seven"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/eightEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/eight"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/nineEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/nine"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/multiplyEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/multiply"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/pointEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/point"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <Button
                android:id="@+id/zeroEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/zero"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <ImageButton
                android:id="@+id/squareRootEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/root"
                android:layout_weight="1"
                android:layout_marginEnd="7dp"
                android:background="@drawable/circle"
                android:textSize="30sp" />
            <Button
                android:id="@+id/divideEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/divide"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/variableEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/variable"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <Button
                android:id="@+id/degreeEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/circle"
                android:text="@string/degree"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <Button
                android:id="@+id/LinearEqnEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/circle"
                android:backgroundTint="#4E342E"
                android:text="@string/equal"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <Button
                android:id="@+id/polynomialEquationSolver"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/circle"
                android:backgroundTint="#4E342E"
                android:visibility="gone"
                android:text="@string/equal"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>


